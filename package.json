{
  "name": "spoddify-mopped-gpio",
  "displayName": "Spoddify Mopped GPIO",
  "description": "A plugin to control Spoddify Mopped using GPIO.",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/spoddify-mopped/spoddify-mopped-gpio.git"
  },
  "bugs": {
    "url": "https://github.com/spoddify-mopped/spoddify-mopped-gpio/issues"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "engines": {
    "node": ">=12"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint --fix src",
    "format": "prettier --write src",
    "build": "tsc",
    "watch": "yarn build && npm link && nodemon"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "import-sort-style-eslint": "^6.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "prettier-plugin-import-sort": "^0.0.7",
    "spoddify-mopped": "^0.0.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "onoff": "^6.0.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "exec": "tsc && spoddify-mopped -v"
  },
  "keywords": [
    "spoddify-mopped",
    "spoddify-mopped-plugin",
    "spoddify-mopped-gpio",
    "gpio",
    "raspberry-pi"
  ]
}
